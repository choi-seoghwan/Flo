<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SeekbarMovingTime" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textSize">24.0dip</item>
        <item name="android:textColor">@color/text_color_06</item>
        <item name="android:ellipsize">none</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingLeft">@dimen/seek_bar_moving_text_padding</item>
        <item name="android:paddingRight">@dimen/seek_bar_moving_text_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/sans_bold</item>
    </style>
    <style name="AppCompatSeekbar" parent="@style/Widget.AppCompat.SeekBar">
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">@dimen/seek_bar_height_basic</item>
        <item name="android:minHeight">@dimen/seek_bar_height_basic</item>
        <item name="android:thumb">@drawable/seek_bar_thumb_selector</item>
        <item name="android:splitTrack">false</item>
    </style>
</resources>
