<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mainplayer_top_height">

        <ImageView
            android:id="@+id/main_player_setting"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18.0dip"
            android:contentDescription="@string/talkback_player_setting_open"
            android:src="@drawable/btn_playlist_setting"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/main_player_eq"
            android:layout_width="32.0dip"
            android:layout_height="30.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18.0dip"
            android:layout_toRightOf="@id/main_player_setting"
            android:contentDescription="@string/talkback_equalize_open"
            android:scaleType="center"
            android:src="@drawable/selector_icon_player_eq"
            android:visibility="visible" />

        <TextView
            android:id="@+id/main_player_playlist_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="18.0dip"
            android:fontFamily="@font/sans_medium"
            android:text="@string/playlist_title"
            android:textColor="@color/text_color_06"
            android:textSize="19.0dip"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/main_player_fold"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mainplayer_top_right_margin"
            android:contentDescription="@string/talkback_player_close"
            android:scaleType="center"
            android:src="@drawable/icon_list_arrow_player" />

    </RelativeLayout>
</layout>